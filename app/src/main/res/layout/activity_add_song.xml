<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    tools:context=".AddSongActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Song details"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/editTextSongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:hint="Name"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextSongArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Artist"
        android:gravity="center"/>


    <EditText
        android:id="@+id/editTextSongLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Link"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonAddPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:text="add picture" />

    <ImageView
        android:id="@+id/songPicture"
        android:layout_width="349dp"
        android:layout_height="207dp"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/buttonAddToPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="30dp"
        android:text="add to playlist" />

</LinearLayout>